{
	"compilerOptions": {
		"module": "commonjs",
		"target": "esnext",
		"jsx": "preserve",
		"lib": ["DOM", "ES2015", "ES2017", "ESNext"],
		"strict": true,
		"noEmit": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"allowJs": true,
		// "noUnusedLocals": true,
		"noUnusedParameters": true,
		"removeComments": false,
		"preserveConstEnums": true
	},
	"include": ["./src/**/*"],
	"exclude": ["node_modules", "public", ".cache"]
}
